      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="width: 65%;margin-left: 15%;background-color: transparent;border-bottom: none;">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header" style="width: 100%">
	<h3 style="color: #fff; width: 100%" align="center"><b><%= @chat.chatname.titleize %></b></h3>
</div>
</nav>
  <div class="panel panel-default" style="padding-bottom: 0px; margin-bottom: 0px;height: 100%">
    <div class="panel panel-body chatscroll" style="overflow-y: hidden;width:100%;height: 100%;position: fixed;bottom: 35px;" id="chatscroll">
          <% if @posts.empty? %>
                No posts. Start the conversation!
          <% else %>
          <div style="padding-top: 80px;"></div>
            <% @posts.each do |post| %>
            <div style="height: 50px; width: 95%" class="sentpost" id="<%= post.id %>">
