<%= form_for :chatparams, class: "form-signin", url: chatlog_path(@chat.id),:method => :patch, :remote => true, :html => { :id => "newpost"} do |f| %>
<%= f.text_field :post, :rows => 1, class: "form-control", placeholder: "Enter post" %>
<div align="center">
<%= submit_tag "Send", class: "btn btn-large btn-primary", style: "width: 200px;"  %>
</div>
<% end %>