<a id="invite-toggle" class="btn btn-primary btn-lg toggle" style="background-color: #428BCA;"><i class="fa fa-envelope"></i></a>
    <div id="sideinvite">
      <ul class="sidebar-nav">
        <a id="invite-close" class="btn btn-default btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
        <li class="sidebar-brand"><%= link_to "Invite Panel", nil %></li>
		<div style="overflow-y: hidden;">
      <li> Invite stuff goes here </li>
      </div>
							</ul>
						</div>
    <script>
        $("#invite-close").click(function(e) {
            e.preventDefault();
            $("#sideinvite").toggleClass("active");
         	document.getElementById("invite-toggle").style.display="inherit";
        });
        $("#invite-toggle").click(function(e) {
            e.preventDefault();
            $("#sideinvite").toggleClass("active");
         	document.getElementById("invite-toggle").style.display="none";
        });
    </script>
