<a id="invite-toggle" class="btn btn-primary btn-lg toggle" style="background-color: #050608;"><i class="fa fa-envelope"></i></a>
    <div id="sideinvite">
      <ul class="sidebar-nav">
        <li class="sidebar-brand"><%= link_to "Invite Panel", root_path %></li>
		<div class="panel panel-body" style="height: 350px;background: rgba(255, 255, 255, .5);overflow-y: hidden;border-color: #eaeaea; border-width: 1px; border-style: solid;">
      <li> Invite stuff goes here </li>
      </div>
        <a id="invite-close" class="btn btn-default btn-lg btn-block toggle"><i class="fa fa-times"></i></a>
							</ul>
						</div>
    <script>
        $("#invite-close").click(function(e) {
            e.preventDefault();
            $("#sideinvite").toggleClass("active");
         	document.getElementById("invite-toggle").style.display="inherit";
        });
        $("#invite-toggle").click(function(e) {
            e.preventDefault();
            $("#sideinvite").toggleClass("active");
         	document.getElementById("invite-toggle").style.display="none";
        });
    </script>
