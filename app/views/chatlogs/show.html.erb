<% provide(:title, @chat.chatname.titleize) %>
<% content_for :header do %>
<%= javascript_include_tag "chatlogs" %>
<% end %>
<div class="chatlog">
<row>
<div class="col-sm-9" style="margin-top: 3%;padding-right:0px;">
<div class="panel panel-default" style="padding-bottom: 15px;padding-left: 10px;">
<h3 class="form-signin-heading" align="center"><b><%= @chat.chatname.titleize %></b></h3>
<div class="panel panel-body">
<div style="height: 350px; overflow-y: auto;" id ="chatscroll">
<%= render 'chatlogs/chatlog' %>
</div>
<% @chatsubscribe = "/chatlog/#{@chat.id}/update" %>
<%= subscribe_to @chatsubscribe %>
</div>
</div>
</div>
<div class="col-sm-3" style="margin-top: 3%;padding-left:0px;">
<div class="panel panel-default" style="padding-bottom: 5px;background-color: #111;border-color: #000;">
<h3 align="center" style="color: #eaeaea;border-bottom: solid; border-color: #000;padding-bottom: 10px;"><b>Users here</b></h3>
<div class="panel panel-body" style="background-color: #111;">
	<div style="height: 350px; overflow-y: auto;" align="center">
<% @usershere.each do |x|%>
<p><%= link_to x.name, x %></p>
<% end %>
</div>
</div>
</div>
</div>
<div class="col-sm-8 col-sm-offset-2" style="padding-top:5px;margin-top: 2%;">
<div class="panel panel-default" style="padding-bottom: 15px;padding-left: 10px;">
<div class="panel panel-body">
<%= render 'chatlogs/newpost' %>
</div>
</div>
</div>
</row>
</div>
