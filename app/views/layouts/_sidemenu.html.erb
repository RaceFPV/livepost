<a id="menu-toggle" class="btn btn-primary btn-lg toggle" style="background-color: #2A75A9"><i class="fa fa-bars"></i></a>
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <a id="menu-close" class="btn btn-default btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
        <li class="sidebar-brand"><%= link_to "LivePost", root_url %></li>
