<a id="menu-toggle" class="btn btn-primary btn-lg toggle" style="background-color: #428BCA"><i class="fa fa-bars"></i></a>
    <div id="sidebar-wrapper" class="leather">
      <ul class="sidebar-nav">
        <a id="menu-close" class="btn btn-default btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
        <li class="sidebar-brand"><%= link_to "LivePost", root_url %></li>
        <% if current_user.nil? or current_user.name.include?("guest_") %>
          <li><%= link_to "Browse Chats", chatlogs_path %></li>
          <hr>
          <li><%= link_to "Sign In", signin_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
        <% else %>
          <li><%= link_to "Browse Chats", chatlogs_path %></li>
          <li><%= link_to "Start a Chat", new_chatlog_path %></li>
          <hr>
          <li><%= link_to "My Profile", current_user %></li>
          <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
        <% end %>
      </ul>
    </div>
<script>
$("#menu-close").click(function(e) {
	e.preventDefault();
	$("#sidebar-wrapper").toggleClass("active");
});
$("#menu-toggle").click(function(e) {
	e.preventDefault();
	$("#sidebar-wrapper").toggleClass("active");
});
</script>