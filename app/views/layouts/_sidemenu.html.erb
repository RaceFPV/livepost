          <li><%= link_to "Browse Chats", chatlogs_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li><%= link_to "Contact", contact_path %></li>
          <hr>
          <li><%= link_to "Sign In", signin_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
