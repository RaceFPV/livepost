<!-- subscribe to the side chat channel via private_pub/faye -->
<% @sidesubscribe = "/scenes/#{params[:id]}/show/sidechat" %>
<%= @sidesubscribed = subscribe_to @sidesubscribe %>

<a id="admin-toggle" class="btn btn-primary btn-lg toggle" style="background-color: #050608;"><i class="fa fa-lock"></i></a>
    <div id="sideadmin">
      <ul class="sidebar-nav">
        <li class="sidebar-brand"><%= link_to "Admin Panel", root_path %></li>
		<div id="userlist" class="panel panel-body" style="height: 350px;background: rgba(255, 255, 255, .5);overflow-y: hidden;border-color: #eaeaea; border-width: 1px; border-style: solid;">
      <li> Admin stuff goes here </li>
      </div>
        <a id="admin-close" class="btn btn-default btn-lg btn-block toggle"><i class="fa fa-times"></i></a>
							</ul>
						</div>
    <script>
        $("#admin-close").click(function(e) {
            e.preventDefault();
            $("#sideadmin").toggleClass("active");
         	document.getElementById("admin-toggle").style.display="inherit";
        });
        $("#admin-toggle").click(function(e) {
            e.preventDefault();
            $("#sideadmin").toggleClass("active");
         	document.getElementById("admin-toggle").style.display="none";
        });
    </script>
