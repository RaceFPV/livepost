<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
		</aside>
	</div>

<% else %>

    <!-- header -->
      <div id="top" class="header">
      <div class="vert-text">
        <h1>LivePost</h1>
        <h4 align="center" style="color: red;">This application is in <b>Active Development</b></h4>
        <a href="#about" class="btn btn-default btn-lg">Find Out More</a>
        <br>
        <br>
        <%= link_to "Sign In", signin_path, class: "btn btn-lg btn-default" %>
        <br>
        <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %> 
      </div>
    </div>
    <!-- /header -->   
        <!-- Intro -->
    <div id="about" class="intro">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 text-center">
				<h3 align="center">Something about what LivePost does goes here....</h3>
		  </div>
        </div>
      </div>
    </div>
    <!-- /Intro -->
    
    <!-- Call to Action -->
    <div class="call-to-action">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 text-center">
            <h3>Get started</h3>
            <a href="chatlogs/new" class="btn btn-lg btn-default">New Chat</a>
            <a href="chatlogs" class="btn btn-lg btn-primary">Show Chats</a>
          </div>
        </div>
      </div>
    </div>
    <!-- /Call to Action -->
<% end %>
