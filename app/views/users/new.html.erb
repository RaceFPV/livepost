<% provide(:title, 'Sign up') %>
<div class="signup">
<row>
<div class="col-md-6 col-md-offset-3" style="padding-top:5px;margin-top: 10%;">
<div class="panel panel-default" style="padding-bottom: 15px;padding-left: 10px;">
<div class="panel panel-body">
	<h1 class="form-signin-heading"><b>Sign up</b></h1>
		<%= form_for @user, class: "form-signin" do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.text_field :name, class: "form-control", placeholder: "Your name" %>
			<%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
			<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
			<div align="center">
			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
</div>
</row>
</div>
