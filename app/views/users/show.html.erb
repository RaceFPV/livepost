<% provide(:title, @user.name.titleize) %>
<div class="showuser">
  <row>
    <div class="col-md-6 col-md-offset-3" style="margin-top: 6%;">
      <div class="panel panel-default" style="padding-bottom: 15px;padding-left: 10px;">
        <div class="panel panel-body">
          <h3 class="form-signin-heading" align="center"><b><%= @user.name.titleize %>'s profile</b></h3>
          <!--<p>Profile created on: <%#= @user.created_at.to_s.to_date %></p>-->
          <p>Profile created <%= local_time_ago(@user.created_at) %></p>
          <% if !@user.location.blank? %>
          	<p>Location: <%= @user.location %></p>
          <% end %>
          <p><%= gravatar_for @user %></p>
          <% if !@user.twitter_id.blank? %>
          	<p>Twitter: <%= @user.twitter_id %></p>
          <% end %>
          <% if !@user.facebook.blank? %>
          	<p>Facebook: <%= @user.facebook %></p>
          <% end %>
          <% if !@user.linkedin.blank? %>
          	<p>Linked In:<%= @user.linkedin %></p>
          <% end %>
          <% if @user == current_user %>
          	<%= link_to "Edit your profile", edit_user_path(@user) %>
          <% end %>
        </div>
      </div>
    </div>
  </row>
</div>
